TASK: highcard
"""


inpFile=open('highcard.in','r')
outFile=open('highcard.out','w')

numberCards=int(inpFile.readline())

totalCards=numberCards*2

arr=[]
for i in range(1,totalCards+1):
  arr.append(i)

elsiesCards=[]
boolArr=[False]*totalCards
for i in range(numberCards):
  x=(int(inpFile.readline()))
  boolArr[x-1]=True
  elsiesCards.append(x)

bessiesCards=[]
for i in range(totalCards):
  if not boolArr[i]:
    bessiesCards.append(i+1)
elsiesCards.sort()
print(elsiesCards)
bessiesCards.sort()
print(bessiesCards)

x=0
counter=0
while (elsiesCards[numberCards-x-1]>bessiesCards[x]):
  counter+=1
  x+=1


print(counter)
